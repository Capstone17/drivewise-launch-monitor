{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start video_ball_detector in WSL (debugpy)",
            "type": "shell",
            "command": "wsl",
            "args": [
                "-d",
                "Ubuntu",
                "-e",
                "bash",
                "-lc",
                "cd ~/webcamGolf && /home/danik/webcamGolf/venv/bin/python debugpy_launcher.py --host 0.0.0.0 --port 5678"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^(.*)$",
                        "kind": "file",
                        "file": 1,
                        "message": 1
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[debugpy\\] listening on ",
                    "endsPattern": "^\\[debugpy\\] listening on "
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": false
            }
        },
        {
            "label": "Terminate video_ball_detector in WSL",
            "type": "shell",
            "command": "wsl",
            "args": [
                "-d",
                "Ubuntu",
                "-e",
                "bash",
                "-lc",
                "pkill -f debugpy_launcher.py || true"
            ],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}
